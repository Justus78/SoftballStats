@model LoginViewModel
@using SoftballStats.ViewModels

@{
        ViewBag.Title = "Login";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftballStats</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoftballStats.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <form method="post" asp-action="Login" asp-controller="Account">   
            <div class="wrapper">
                <div class="login-wrapper">
                    <div class="login-header">Login</div>
                    @* @if (ViewBag.SuccessMessage != null) {
                            <div class="alert alert-success">
                                @ViewBag.SuccessMessage
                            </div>
                    } *@
                    <div class="login-form">

                        <div class="input-wrapper">
                            <label class="label"></label>
                            <input type="text" class="input-field" asp-for="UserName" placeholder="Username" />                    
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <i class="bx bx-user icon"></i>
                        </div>

                        <div class="input-wrapper">
                            <label class="label"></label>
                            <input type="password" asp-for="Password" class="input-field" placeholder="Password" />                    
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <i class="bx bx-lock-alt icon"></i>
                        </div>

                        <div class="login-check">
                            <div class="remember">
                                <input type="checkbox" asp-for="RememberMe" title="RememberMe">
                                <label asp-for="RememberMe">Remember Me</label>
                            </div>
                            <div class="forgot">
                                <a class="login-a"href="#">Forgot Password</a>
                            </div>
                        </div>

                        <div class="input-wrapper">
                            <input type="submit" class="input-login" value="Login">
                        </div>

                        <div class="register">
                            <span>
                                Don't have an account?
                                <a asp-action="Register" asp-controller="Account">Register</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </form> 
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SoftballStats - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>