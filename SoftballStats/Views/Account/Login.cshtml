@model LoginViewModel
@using SoftballStats.ViewModels

@{
        ViewBag.Title = "Login";
}

<link rel="stylesheet" href="~/css/Login.css">
<div class="login-container">
    <form method="post" asp-action="Login" asp-controller="Account">   
        <div class="wrapper">
            <div class="login-wrapper">
                <div class="login-header">Login</div>
                @* @if (ViewBag.SuccessMessage != null) {
                        <div class="alert alert-success">
                            @ViewBag.SuccessMessage
                        </div>
                } *@
                <div class="login-form">

                    <div class="input-wrapper">
                        <label class="label"></label>
                        <input type="text" class="input-field" asp-for="UserName" placeholder="Username" />                    
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <i class="bx bx-user icon"></i>
                    </div>

                    <div class="input-wrapper">
                        <label class="label"></label>
                        <input type="password" asp-for="Password" class="input-field" placeholder="Password" />                    
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <i class="bx bx-lock-alt icon"></i>
                    </div>

                    <div class="login-check">
                        <div class="remember">
                            <input type="checkbox" asp-for="RememberMe" title="RememberMe">
                            <label asp-for="RememberMe">Remember Me</label>
                        </div>
                        <div class="forgot">
                            <a class="login-a"href="#">Forgot Password</a>
                        </div>
                    </div>

                    <div class="input-wrapper">
                        <input type="submit" class="input-login" value="Login">
                    </div>

                    <div class="register">
                        <span>
                            Don't have an account?
                            <a asp-action="Register" asp-controller="Account">Register</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </form> 
</div>
