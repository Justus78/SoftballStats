@using SoftballStats.ViewModels
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}
<link rel="stylesheet" href="~/css/Register.css" />
<form method="post" asp-action="Register">

    <div class="register-container">
        <div class="wrapper">
            <div class="register-wrapper">
                <div class="register-header">Register</div>
                <div class="register-form">

                    <div class="register-input-wrapper">
                        <label class="register-label"></label>
                        <input type="text" class="register-input-field" asp-for="UserName" placeholder="Username" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <i class="bx bx-user icon"></i>
                    </div>

                    <div class="register-input-wrapper">
                        <label class="register-label"></label>
                        <input type="password" asp-for="Password" class="register-input-field" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <i class="bx bx-lock-alt icon"></i>
                    </div>

                    <div class="register-input-wrapper">
                        <label class="register-label"></label>
                        <input type="password" asp-for="ConfirmPassword" class="register-input-field" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <i class="bx bx-lock-alt icon"></i>
                    </div>

                    <div class="register-input-wrapper">
                        <input type="submit" class="register-input-login" value="Create Account">
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</form>
    