<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftballStats</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoftballStats.styles.css" asp-append-version="true" />
</head>
<body>
    <!--begin side bar-->
    <div class="sidebar"> 
        <div class="sidebar-header">
            <h2>Menu</h2>
            <button class="hamburger" id="hamburger">&#9776;</button>
        </div>
        <ul class="sidebar-menu">
            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
            <hr />
            <li><a asp-action="Index" asp-controller="Teams">Teams</a></li>
            <hr />
            <li><a href="#about">About</a></li>
            <hr />
            <li><a href="#contact">Contact</a></li>
            <hr />
        </ul>
    </div> 
    <!--end side bar-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SoftballStats - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
