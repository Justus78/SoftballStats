@model Team

<h1> Add a new team below</h1>

<form asp-action="Add" asp-controller="Teams" method="post">
    <input type="hidden" id="TeamID" name="TeamID" asp-for="TeamID" />
    <input type="hidden" id="UserId" name="UserId" asp-for="UserID" />


    <div class="mb-3">
        <label asp-for="TeamName" class="form-label">Team Name</label>
        <input type="text" asp-for="TeamName" class="form-control" placeholder="Team name" />
        <span asp-validation-for="TeamName" class="text-danger"></span>

    </div>

    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>