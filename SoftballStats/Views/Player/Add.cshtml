@model PlayerViewModel
@using SoftballStats.ViewModels

<h1> Add a new player below</h1>
<div class="container d-flex justify-content-center">
    <form asp-action="Add" asp-controller="Player" method="post" enctype="multipart/form-data">

        <input type="hidden" id="PlayerID" name="PlayerID" asp-for="PlayerID" />
        <input type="hidden" id="UserId" name="UserId" asp-for="UserId" />

        <div class="row">
            <!--Left Column-->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input type="text" asp-for="FirstName" class="form-control" placeholder="First name"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input type="text" asp-for="LastName" class="form-control" placeholder="Last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Image" class="form-label">Profile Picture</label>
                    <input type="file" asp-for="Image" class="form-control" placeholder="profile picture" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <!--Right Column-->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Number" class="form-label">Number</label>
                    <input type="text" asp-for="Number" class="form-control" placeholder="Number" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Position" class="form-label">Position</label>
                    <input type="text" asp-for="Position" class="form-control" placeholder="Position" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="mb-3">
            <label class="form-label">Teams: </label>
            @if(Model.Teams != null){
                @foreach (var team in Model.Teams)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" value="@team.TeamID" name="selectedTeam">
                        <label class="form-check-label" for="@team.TeamID">@team.TeamName</label>
                    </div>
                }
            } else
            {
                <p>No teams found</p>
            }
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Add Player</button>
        </div>
    </form>
</div>