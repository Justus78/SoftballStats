@model EditPlayerViewModel
@using SoftballStats.ViewModels

<h1 class="text-center"> Edit @Model.FirstName @Model.LastName</h1>

<div class="container d-flex justify-content-center">
    <form asp-action="Edit" asp-controller="Player" method="post" enctype="multipart/form-data" class="w-75">

        <input type="hidden" id="PlayerID" name="PlayerID" asp-for="PlayerID" />
        <input type="hidden" id="UserId" name="UserId" />

        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Image" class="form-label">Profile Picture</label>
                    <input type="file" asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input type="text" asp-for="FirstName" class="form-control" placeholder="First name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input type="text" asp-for="LastName" class="form-control" placeholder="Last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Number" class="form-label">Number</label>
                    <input type="text" asp-for="Number" class="form-control" placeholder="Number" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Position" class="form-label">Position</label>
                    <input type="text" asp-for="Position" class="form-control" placeholder="Position" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Team Selection (below both columns) -->
        <div class="mb-3">
            <label class="form-label">Teams:</label>
            @foreach (var team in Model.Teams)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" value="@team.TeamID" name="selectedTeam" id="team_@team.TeamID" />
                    <label class="form-check-label" for="team_@team.TeamID">@team.TeamName</label>
                </div>
            }
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>

    </form>
</div>
