@model IEnumerable<Player>

@{
    ViewData["Title"] = "Players";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="container w-50">
        <div class="text-center mb-3">
            <h1 class="mb-3">Players</h1>
            <a asp-controller="Player" asp-action="Add" class="btn btn-primary">New Player</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Stats</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in Model)
                    {
                        <tr>
                            <td>@player.FirstName</td>
                            <td>@player.LastName</td>
                            <td><a class="btn btn-primary" asp-action="PlayerStats" asp-controller="Stats" asp-route-id="@player.PlayerID">View Stats</a></td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Player" asp-action="Edit" asp-route-id="@player.PlayerID">Edit</a>
                                <a class="btn btn-primary" asp-controller="Player" asp-action="Delete" asp-route-id="@player.PlayerID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
   
            </table>
        </div>
    </div>
</div>
