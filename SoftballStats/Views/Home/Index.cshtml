@model HomeViewModel
@using SoftballStats.ViewModels

@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Sidebar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Home.css">
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h2>Menu</h2>
            <button class="hamburger" id="hamburger">&#9776;</button>
        </div>
        <ul class="sidebar-menu">
            <li><a href="#home">Home</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </div>
    <div class="content">
       
        <div class="album py-5 bg-body-tertiary">
            <div class="container">
                <h1>Players</h1>
                <a asp-controller="Player" asp-action="Add" class="btn btn-primary">Create</a>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @foreach (var item in Model.Players)
                    {
                        <div class="col">
                            <div class="card shadow-sm">
                                <img class="card-img-top" src="@item.Image" alt="Card Image Cap"/>
                                <div class="card-body">
                                    <p class="card-text">@item.FirstName @item.LastName</p>
                                    @if(item.Team != null){
                                        <p class="card-text">@item.Team.TeamName</p>
                                    }
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <a asp-controller="Player" asp-action="Edit" asp-route-id="@item.PlayerID" 
                                                    class="btn btn-sm btn-outline-secondary">Edit</a>
                                                <a asp-controller="Player" asp-action="Delete" asp-route-id="@item.PlayerID"    
                                                    class="btn btn-sm btn-outline-secondary">Delete</a>
                                            }
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    }@*End foreach*@               
                </div>
            </div>
        </div>
    </div>

    <script>
        const hamburger = document.getElementById('hamburger');
        const sidebar = document.querySelector('.sidebar');
        hamburger.addEventListener('click', () => {
            sidebar.classList.toggle('active');
        });
    </script>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</html>
