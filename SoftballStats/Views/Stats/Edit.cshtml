@model GameStats

@{
    ViewData["Title"] = "Edit Stats";
}

<h1 class="text-center"> Edit game stats</h1>

<div class="container d-flex justify-content-center">
    <form asp-action="Edit" asp-controller="Stats" method="post" class="w-75">
        <input type="hidden" id="StatsID" name="StatsID" asp-for="StatsID" />
        <input type="hidden" id="PlayerID" name="PlayerID" asp-for="PlayerID" />

        <div class="row">
            <!-- Column 1 -->
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Opponent" class="form-label">Opponent</label>
                    <input type="text" asp-for="Opponent" class="form-control" placeholder="Opponent" />
                    <span asp-validation-for="Opponent" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GameDate" class="form-label">Game Date</label>
                    <input type="date" asp-for="GameDate" class="form-control" />
                    <span asp-validation-for="GameDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AtBats" class="form-label">At Bats</label>
                    <input type="text" asp-for="AtBats" class="form-control" placeholder="At Bats" />
                    <span asp-validation-for="AtBats" class="text-danger"></span>
                </div>
            </div>

            <!-- Column 2 -->
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Hits" class="form-label">Hits</label>
                    <input type="text" asp-for="Hits" class="form-control" placeholder="Hits" />
                    <span asp-validation-for="Hits" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Runs" class="form-label">Runs</label>
                    <input type="text" asp-for="Runs" class="form-control" placeholder="Runs Scored" />
                    <span asp-validation-for="Runs" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RBIs" class="form-label">RBIs</label>
                    <input type="text" asp-for="RBIs" class="form-control" placeholder="RBIs" />
                    <span asp-validation-for="RBIs" class="text-danger"></span>
                </div>
            </div>

            <!-- Column 3 -->
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Walks" class="form-label">Walks</label>
                    <input type="text" asp-for="Walks" class="form-control" placeholder="Walks" />
                    <span asp-validation-for="Walks" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Strikeouts" class="form-label">Strikeouts</label>
                    <input type="text" asp-for="Strikeouts" class="form-control" placeholder="Strikeouts" />
                    <span asp-validation-for="Strikeouts" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StolenBases" class="form-label">Stolen Bases</label>
                    <input type="text" asp-for="StolenBases" class="form-control" placeholder="Stolen Bases" />
                    <span asp-validation-for="StolenBases" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Add Stats</button>
        </div>
    </form>
</div>
