@model PlayerStatsViewModel
@using SoftballStats.ViewModels

@{
    ViewData["Title"] = "Games";
}

<h1>Games for @Model.Player.FirstName @Model.Player.LastName</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Game Date</th>
            <th>Opponent</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var game in Model.Stats)
        {
            <tr>
                <td>@game.GameDate</td>
                <td>@game.Opponent</td>
                <td>
                    <a asp-action="Edit" asp-controller="Stats" asp-route-id="@game.StatsID">Edit</a> |
                    <a asp-action="Delete" asp-controller="Stats" asp-route-id="@game.StatsID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-action="PlayerStats" asp-controller="Stats" asp-route-id="@Model.Player.PlayerID">Go Back</a>